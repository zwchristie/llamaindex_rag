# Example environment variables
# Copy this file to .env and fill in your actual values

# Bedrock API Gateway Configuration (Primary)
BEDROCK_ENDPOINT_URL=
BEDROCK_LLM_MODEL=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# Bedrock SSL Configuration (Optional)
BEDROCK_ENDPOINT_VERIFY_SSL=true
# BEDROCK_SSL_CERT_FILE=/path/to/client.crt
# BEDROCK_SSL_KEY_FILE=/path/to/client.key  
# BEDROCK_SSL_CA_FILE=/path/to/ca.crt

# Bedrock HTTP Authentication (Optional)
# BEDROCK_HTTP_AUTH_USERNAME=your_username
# BEDROCK_HTTP_AUTH_PASSWORD=your_password

# Optional: Direct AWS Bedrock Configuration (Fallback)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here_if_needed

# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX_NAME=view_metadata
OPENSEARCH_VECTOR_FIELD=embedding
OPENSEARCH_VECTOR_SIZE=1536

# OpenSearch HTTP Authentication (Optional - use these if different from username/password)
# OPENSEARCH_HTTP_AUTH_USERNAME=opensearch_user
# OPENSEARCH_HTTP_AUTH_PASSWORD=opensearch_pass

# Application Settings
APP_TITLE=Text-to-SQL RAG API
APP_DESCRIPTION=Agentic text-to-SQL RAG solution with LlamaIndex and OpenSearch
APP_VERSION=0.1.0
APP_DEBUG=true
MAX_UPLOAD_SIZE=10485760
CHUNK_SIZE=1024
CHUNK_OVERLAP=200
SIMILARITY_TOP_K=5

# External Services
EXECUTION_API_URL=http://localhost:8001

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MongoDB Configuration
MONGODB_URL=mongodb://admin:password@localhost:27017
MONGODB_DATABASE=text_to_sql_rag

# Redis (if using for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed
REDIS_DB=0

# HITL Configuration
HITL_TIMEOUT_MINUTES=30
MAX_PENDING_REQUESTS=100