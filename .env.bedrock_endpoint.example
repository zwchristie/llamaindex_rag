# Example environment configuration for Bedrock Endpoint access
# Copy this to .env and update with your actual values

# Application Configuration
APP_DEBUG=true
SECRET_KEY=your-secret-key-here

# LLM Provider Configuration - Use bedrock_endpoint for HTTP-based access
LLM_PROVIDER=bedrock_endpoint

# Bedrock Endpoint Configuration
BEDROCK_ENDPOINT_URL=https://your-base-host.com
# Example: BEDROCK_ENDPOINT_URL=https://api.company.com

# AWS Model Configuration (still needed for model IDs)
AWS_LLM_MODEL=us.anthropic.claude-3-haiku-20240307-v1:0
# Other available models:
# AWS_LLM_MODEL=us.anthropic.claude-3-sonnet-20240229-v1:0
# AWS_LLM_MODEL=us.anthropic.claude-3-opus-20240229-v1:0

AWS_EMBEDDING_MODEL=amazon.titan-embed-text-v1

# OpenSearch Configuration (unchanged)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_INDEX_NAME=documents
OPENSEARCH_VECTOR_FIELD=vector
OPENSEARCH_VECTOR_SIZE=1536

# MongoDB Configuration (unchanged)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=text_to_sql_rag

# Meta Documents Path (unchanged)
META_DOCUMENTS_PATH=meta_documents

# AWS Credentials (NOT NEEDED with endpoint approach)
# AWS_REGION=us-east-1
# AWS_USE_PROFILE=false
# AWS_PROFILE=your-profile-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key